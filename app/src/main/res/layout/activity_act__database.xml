<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/DrDarabase"
    >


<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#859a92"
        >

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:onClick="backdatabase"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_action_back"
                    android:tint="#000"
                    />

                <TextView
                    android:id="@+id/TxtDatabase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="اپلیکیشن سپهر"
                    android:textColor="#000"
                    android:textSize="25sp" />

                <EditText
                    android:id="@+id/Edt_SearchData"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="Search into"
                    android:layout_marginLeft="16dp"
                    android:textColor="#000"
                    android:gravity="center"
                    android:visibility="gone"
                    android:layout_weight="1"
                    android:textSize="10sp"


                    />

                <ImageView
                    android:onClick="searchDatabase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_search" />


            </LinearLayout>


        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginTop="10dp"
        >

        <EditText
            android:id="@+id/NameData"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:textSize="15sp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="نام محصول :"
            android:layout_marginRight="23dp"
            android:textSize="15sp"
            android:layout_marginTop="8dp"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginTop="10dp"
        >

        <EditText
            android:id="@+id/CountData"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:textSize="15sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="تعداد محصول :"
            android:layout_marginRight="13dp"
            android:textSize="15sp"
            android:layout_marginTop="8dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >
        <TextView
            android:id="@+id/IDData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID"
            android:gravity="center"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:gravity="center"
        >

        <Button
            android:id="@+id/button4"
            android:layout_width="80dp"
            android:layout_height="28dp"
            android:background="@drawable/shape"
            android:onClick="SabtData"
            android:text="sabt"
            android:textSize="11sp" />

        <Button
            android:id="@+id/UpdateData"
            android:enabled="false"
            android:onClick="updateData"
            android:layout_width="80dp"
            android:layout_height="28dp"
            android:background="@drawable/shape"
            android:layout_marginRight="10dp"
            android:text="update"
            android:textSize="11sp"
            android:layout_marginLeft="10dp"
            />

        <Button
            android:id="@+id/DeleteData"
            android:enabled="false"
            android:onClick="DeleteData"
            android:layout_width="80dp"
            android:layout_height="28dp"
            android:background="@drawable/shape"
            android:text="delete"
            android:textSize="11sp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/LineDatabase"
        android:layout_marginTop="20dp"
        >



    </LinearLayout>

    <TextView
        android:id="@+id/AllCountM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:text="تعداد کل محصولات :"
        android:layout_marginRight="10dp"

        />




</LinearLayout>
</ScrollView>



    <android.support.design.widget.NavigationView
        android:layout_width="220dp"
        android:layout_height="400dp"
        android:layout_gravity="left"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="right"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ترتیب بر اساس حروف"
                android:textColor="#000"
                android:onClick="horof_Tartib"
                android:layout_marginTop="30dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ترتیب بر اساس عدد"
                android:layout_marginTop="10dp"
                android:textColor="#000"
                android:onClick="adad_Tartib"
                />


        </LinearLayout>

    </android.support.design.widget.NavigationView>


</android.support.v4.widget.DrawerLayout>
