<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <android.support.design.widget.AppBarLayout
        android:id="@+id/Appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:onClick="backVorod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_backimage"
                    />

            </LinearLayout>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>




    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:columnCount="4"
        >

        <TextView
            android:layout_column="3"
            android:text="نام :"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_row="0"
            android:layout_marginRight="10dp"

            />

        <EditText
            android:id="@+id/Name_Vorod"
            android:layout_column="2"
            android:layout_marginTop="13dp"
            android:layout_row="0"
            android:ems="12"
            android:drawableLeft="@drawable/ic_person"
            android:drawableTint="#b3e7e2"
            android:hint="Name"
            android:textColor="#000"
            android:textSize="15sp"
            android:gravity="center"
            />

        <TextView
            android:layout_column="3"
            android:text="رمز عبور :"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_row="1"
            android:layout_marginRight="10dp"

            />

        <EditText
            android:id="@+id/Pass_Vorod"
            android:layout_column="2"
            android:layout_marginTop="13dp"
            android:layout_row="1"
            android:ems="12"
            android:gravity="center"
            android:drawableLeft="@drawable/ic_ramzobor"
            android:drawableTint="#b3e7e2"
            android:hint="password"
            android:textColor="#000"
            android:inputType="numberPassword"
            android:textSize="15sp"
            />




    </GridLayout>

  <Button
      android:onClick="okVorod"
      android:layout_width="80dp"
      android:layout_height="30dp"
      android:background="@drawable/shape"
      android:text="ok"
      android:gravity="center"
      android:layout_gravity="center"
      android:layout_marginTop="30dp"
      />








</LinearLayout>
